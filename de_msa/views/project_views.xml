<odoo>

	<record id="project_form_view_inherit_site" model="ir.ui.view">
		<field name="name">project.project.form.view.inherit.site</field>
		<field name="model">project.project</field>
		<field name="inherit_id" ref="project.edit_project" />
		<field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <group>
                        <field name='address_id' attrs="{'required':[('allow_site_planning', '=', True)]}"/>
                        <field name="state_id" string="Region" attrs="{'invisible':[('allow_site_planning','!=',True)]}"/>
                        <field name="product_id" options="{'no_create': True}" required="1" attrs="{'invisible':[('allow_site_planning','!=',True)]}"/>
                    </group>
                    <group>
                        <field name="analytic_account_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_partner_id': partner_id}" groups="analytic.group_analytic_accounting" attrs="{'invisible':[('allow_site_planning','!=',True)]}" />
                        <field name="location_id" options="{'no_create': True}" required="1" attrs="{'invisible':[('allow_site_planning','!=',True)]}"/>
                    </group>
                        
                </group>
            </xpath>
            <xpath expr="//page[1]" position="after">
                <page name="assets" string="Assets" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <field name="asset_ids" />
                </page>
                <page name="po_lines" string="PO Lines" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <field name="purchase_line_ids" groups="de_msa.group_msa_user" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                        <tree editable="bottom">
                            <field name="order_id" />
                            <field name="product_id" />
                            <field name="product_qty" />
                            <field name="price_unit" />
                            <field name="price_subtotal" />
                            <field name="product_uom" optional="show" />
                            <field name="qty_received" optional="hide" />
                            <field name="qty_invoiced" optional="hide" />
                            <field name="date_planned" string="Schedule Date" optional="show" />
                        </tree>
                    </field>
                </page>
                <page name="site_billing_info" string="Billing Info" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <field name="site_billing_info_ids" attrs="{'invisible':[('allow_site_planning','!=',True)]}"/>
                </page>
                <page name="purchase_subscriptions" string="Subscriptions" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <field name="purchase_subscription_ids" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                        <tree editable="bottom">
                            <field name="name" />
                            <field name="date_start" />
                            <field name="date" />
                            <field name="stage_id" />
                        </tree>
                    </field>
                </page>
                <page name="power_models" string="Power Models" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                    <field name="power_product_ids" groups="de_msa.group_msa_user" attrs="{'invisible':[('allow_site_planning','!=',True)]}">
                        <tree editable="bottom">
                            <field name="period" required="1"/>
                            <field name="date_start" required="1" />
                            <field name="date_end" required="0" />
                            <field name="product_id" required="1" options="{'no_create': True,'no_open':True}" />
                        </tree>
                    </field>
                </page>
            </xpath>
			<xpath expr="//field[@name='partner_id']" position="after">
				<field name="state_id" />
			</xpath>

		</field>
	</record>
    <!-- Site View -->
    <!-- Project -->
    <record id="project_site_form_view" model="ir.ui.view">
        <field name="name">project.site.form.view</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Site" delete="0">
                <header>
                    <button name="%(portal.portal_share_action)d" string="Share" type="action" class="oe_highlight oe_read_only"/>
                </header>
                <sheet string="Site">
                    <div class="oe_button_box" name="button_box" groups="base.group_user">
                        <button  class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-file-text-o">
                            <field string="Documents" name="doc_count" widget="statinfo"/>
                        </button>                          
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="bg-danger" attrs="{'invisible': [('active', '=', True)]}"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Project Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name='address_id' attrs="{'required':[('allow_site_planning', '=', True)]}"/>
                            <field name="state_id" string="Region"/>
                        </group>
                        <group>
                            <field name="analytic_account_id" domain="['|', ('company_id', '=', company_id), ('company_id', '=', False)]" context="{'default_partner_id': partner_id}" groups="analytic.group_analytic_accounting"/>
                            <field name="location_id" options="{'no_create': True}"/>
                        </group>
                        
                    </group>
                    <notebook>
                        <page name="description_page" string="Description">
                            <field name="description" nolabel="1" placeholder="Describe your project..." type="html"/>
                            <div class="d-none oe_clear"/>
                        </page>
                        
                        <page name="site_settings" string="Settings">
                            <group>
                                <group>
                                    <field name="active" invisible="1"/>
                                    <field name="user_id" string="Responsible" widget="many2one_avatar_user" attrs="{'readonly':[('active','=',False)]}" domain="[('share', '=', False)]"/>
                                    <field name="partner_id" string="Vendor" widget="res_partner_many2one"/>
                                    <field name="partner_phone" widget="phone"
                                           attrs="{'invisible': [('partner_id', '=', False)]}"/>
                                    <field name="partner_email" widget="email"
                                           attrs="{'invisible': [('partner_id', '=', False)]}"/>
                                </group>
                                <group>
                                    <field name="privacy_visibility" widget="radio"/>
                                    <field name="allowed_internal_user_ids" widget="many2many_tags" attrs="{'invisible': [('privacy_visibility', '!=', 'followers')]}"/>
                                    <field name="allowed_portal_user_ids" widget="many2many_tags" options="{'no_create': True}" attrs="{'invisible': [('privacy_visibility', '!=', 'portal')]}"/>

                                    <field name="company_id" groups="base.group_multi_company"/>
                                </group>
                                <group name="extra_settings">
                                </group>
                            </group>
                            <group>
                            <group string="Site Info">
                                <field name='site_type_id' attrs="{'required':[('allow_site_planning', '=', True)]}" options="{'no_create':'1', 'no_open':'1'}"/>
                            </group>
                            <group>
                               <field name="allow_site_planning" string="Is a Site"/>
                            </group>
                        </group>
                        </page>
                    </notebook>

                    <div class="oe_chatter">
                        <field name="message_follower_ids" options="{'post_refresh':True}" help="Follow this project to automatically track the events associated to tasks and issues of this project." groups="base.group_user"/>
                    </div>
                </sheet>
                </form>
            </field>
        </record>
    <!-- Tree View -->
    <record id="project_site_tree_view" model="ir.ui.view">
            <field name="name">project.site.tree.view</field>
            <field name="model">project.project</field>
            <field name="arch" type="xml">
                <tree decoration-muted="active == False" string="Sites" delete="0" multi_edit="1" sample="1">
                    <field name="sequence" optional="show" widget="handle"/>
                    <field name="message_needaction" invisible="1"/>
                    <field name="active" invisible="1"/>
                    <field name="name" string="Name" class="font-weight-bold"/>
                    <field name="partner_id" optional="show" string="Partner"/>
                    <field name="site_type_id" optional="hide" />
                    <field name="address_id" optional="hide" />
                     <field name="state_id" optional="hide"/>
                    <field name="location_id" optional="show" string="Site Location"/>
                    <field name="analytic_account_id" optional="hide"/>
                    <field name="privacy_visibility" optional="hide"/>
                    <field name="company_id" optional="show"  groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>
    
    <record id="open_view_site_all" model="ir.actions.act_window">
            <field name="name">Sites</field>
            <field name="res_model">project.project</field>
            <field name="domain">[('allow_site_planning','=',True)]</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('project_site_tree_view')}),
              (0, 0, {'view_mode': 'form', 'view_id': ref('project_form_view_inherit_site')})]"/>
            <field name="search_view_id" ref="project.view_project_project_filter"/>
            <field name="target">main</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No sites found. Let's create one!
                </p>
            </field>
        </record>
    

</odoo>
