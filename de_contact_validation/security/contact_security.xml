<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="group_contact_user" model="res.groups">
            <field name="name">Contact User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    
        <record id="group_contact_manager" model="res.groups">
            <field name="name">Contact Manager</field>
            <field name="implied_ids" eval="[(4, ref('group_contact_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        
        <!-- Account Record Rule -->
        <record model="ir.rule" id="rule_res_partner_approved_account">
            <field name="name">Approved Invoice Contacts</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
            <field name="domain_force">[ ('partner_id.stage_category','!=','draft')]</field>
        </record>

        <!-- Partner Record Rule -->
        <record model="ir.rule" id="rule_res_partner_approved_readonly">
            <field name="name">Approved Contacts</field>
            <field name="model_id" ref="model_res_partner"/>
            <field eval="0" name="perm_unlink"/>
            <field eval="0" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="0" name="perm_create"/>
            <field name="groups" eval="[(4, ref('group_contact_user')), (4, ref('group_contact_manager'))]"/>
            <field name="domain_force">[ ('stage_category','!=','draft')]</field>
        </record>

        <record model="ir.rule" id="rule_res_partner_approved_administrator">
            <field name="name">Administrator Contacts</field>
            <field name="model_id" ref="model_res_partner"/>
            <field eval="1" name="perm_unlink"/>
            <field eval="1" name="perm_write"/>
            <field eval="1" name="perm_read"/>
            <field eval="1" name="perm_create"/>
            <field name="groups" eval="[(4, ref('base.group_erp_manager'))]"/>
             <field name="domain_force">[(1,'=',1)]</field>
        </record>
    </data>
</odoo>