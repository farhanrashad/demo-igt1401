        <record id="purchase_budget_form_view_inherit" model="ir.ui.view">
            <field name="name">purchase.budget.form.view.inherit</field>
            <field name="model">purchase.budget</field>
            <field name="inherit_id" ref="de_purchase_budget.purchase_budget_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="print_purchase_budget_report" type="object" string="Purchase Budget" class="oe_highlight"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>