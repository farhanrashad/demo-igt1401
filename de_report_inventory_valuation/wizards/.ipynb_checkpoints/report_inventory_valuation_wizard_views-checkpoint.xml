<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_inventory_valuation_wizard_form_view" model="ir.ui.view">
			<field name="name">report.inventory.valuation.wizard.form.view</field>
			<field name="model">report.inventory.valuation.wizard</field>
			<field name="arch" type="xml">
				<form string="Inventory Valuation">
                    <group>
                        <group>
                            <field name="in_date" required="1"/>
                        </group>
                        <group>
                            <field name="categ_ids" widget="many2many_tags"/>
                            <field name="location_ids" widget="many2many_tags" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Products">
                            <field name="product_ids">
                                <tree>
                                    <field name="name"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
				
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_inventory_valuation_wizard" model="ir.actions.act_window">
			<field name="name">Inventory Valuation Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.inventory.valuation.wizard</field>
			<field name="view_id" ref="report_inventory_valuation_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="action_report_inventory_valuation_wizard" id="report_inventory_valuation_report_item" name="Inventory Valuation Report" parent="stock.menu_warehouse_report" sequence="210"/>


    </data>
</odoo>
