<odoo>
	<data>
	
	    <record id="report_stock_valuation_form_view" model="ir.ui.view">
			<field name="name">report.stock.valuation.form.view</field>
			<field name="model">report.stock.valuation</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				
		        <form string="Stock Valuation Report">
	                <group>
		        		<group>
		                    <field name="product_ids" widget="many2many_tags" options="{'no_create':True, 'no_open':True}"/>
		                    <field name="categ_ids" widget="many2many_tags" options="{'no_create':True, 'no_open':True}"/>
		                </group>
		                <group>
		                	<field name="location_ids" domain="[('usage','=','internal')]" widget="many2many_tags" options="{'no_create':True, 'no_open':True}"/>
		                </group>
		        	</group>

	                <footer>
	                    <button name="print_excel_report" string="Export" type="object" class="oe_highlight"/> or 
	                    <button string="Cancel" class="oe_link" special="cancel"/>
	                </footer>
		          	
		        </form>
	    	</field>
	    </record>
		
	    <record id="action_report_stock_valuation_xlsx" model="ir.actions.act_window">
			<field name="name">Stock Valuation Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">report.stock.valuation</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="report_stock_valuation_form_view"/>
			<field name="target">new</field>
	    </record>
		
		<menuitem id="menu_report_stock_valuation_xlsx" action="action_report_stock_valuation_xlsx" parent="stock.menu_warehouse_report"/>
	
	</data>
</odoo>