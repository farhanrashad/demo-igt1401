<odoo>
    <data>
        
        <record id="project_task_type_form_inherit" model="ir.ui.view">
            <field name="name">project.task.type.form.view.inherit</field>
            <field name="model">project.task.type</field>
            <field name="inherit_id" ref="project.task_type_edit"/>
            <field name="arch" type="xml">
                
                <xpath expr="//field[@name='sequence']" position="attributes">
                    <attribute name="required">1</attribute>
                </xpath>
                <xpath expr="//group[1]" position="after">
                    <group string="Workflow" name="task_workflow">
                        <group >
                            <field name="stage_category" widget="radio"/>
                            <field name="user_id" string="Default Task Assign To" options="{'no_create': True,'no_open':True}"/>
                            <field name="group_id" options="{'no_create': True,'no_open':True}"/>
                        </group>
                        <group>
                            
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
        
        <record id="project_task_form_inherit" model="ir.ui.view">
            <field name="name">project.task.form.view.inherit</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <field name="next_stage_id" invisible="1"/>
                    <field name="prv_stage_id" invisible="1"/>
                    <field name="stage_category" invisible="1"/>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="action_submit" string="Submit for Approval" type="object" class="oe_highlight" attrs="{'invisible': [('stage_category', 'not in', ['draft'])]}"/>

                    <button name="action_confirm" string="Approve" type="object" class="oe_highlight"
                        attrs="{'invisible': [('stage_category', 'not in', ['progress'])]}"/>
                    <button name="action_refuse" string="Refuse" type="object" 
                        attrs="{'invisible': [('stage_category', 'not in', ['progress'])]}"/>
                </xpath>
                <xpath expr="//field[@name='stage_id']" position="replace">
                    <field name="stage_id" widget="statusbar" options="{'clickable': '0', 'fold_field': 'fold'}" attrs="{'invisible': [('project_id', '=', False)]}"/>
                </xpath>
                <!-- add attributes -->
                <xpath expr="//field[@name='name']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='project_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='user_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='date_deadline']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="attrs">{'readonly': [('stage_category','!=','draft'),('project_id','!=',False)]}</attribute>
                </xpath>
                
                <xpath expr="//notebook" position="inside">
                    <page string="Worfklow" id="workflow">
                        <field name="task_stage_ids" attrs="{'readonly': [('stage_category','!=','draft')]}">
                            <tree editable="bottom">
                                <field name="stage_id" required="1" options="{'no_create': True,'no_open':True}" domain="[('project_ids','=',parent.project_id)]"/>
                                <field name="next_stage_id" options="{'no_create': True,'no_open':True}" domain="[('project_ids','=',parent.project_id)]"/>
                                <field name="prv_stage_id" options="{'no_create': True,'no_open':True}" domain="[('project_ids','=',parent.project_id)]"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
                
            </field>
        </record>
    </data>
</odoo>