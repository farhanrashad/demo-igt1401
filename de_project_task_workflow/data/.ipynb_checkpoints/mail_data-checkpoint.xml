<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="mail_act_task_approval" model="mail.activity.type">
            <field name="name">Task Approval</field>
            <field name="icon">fa-dollar</field>
            <field name="res_model_id" ref="project.model_project_task"/>
        </record>

        <!-- Task subtypes for messaging / Chatter -->
        <record id="mt_task_approved" model="mail.message.subtype">
            <field name="name">Approved</field>
            <field name="res_model">project.task</field>
            <field name="default" eval="True"/>
            <field name="description">Task approved</field>
        </record>
        <record id="mt_task_refused" model="mail.message.subtype">
            <field name="name">Refused</field>
            <field name="res_model">project.task</field>
            <field name="default" eval="True"/>
            <field name="description">Task refused</field>
        </record>

        
    </data>
</odoo>
