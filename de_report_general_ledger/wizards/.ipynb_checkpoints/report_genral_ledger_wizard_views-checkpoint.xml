<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="report_general_ledger_wizard_form_view" model="ir.ui.view">
			<field name="name">general.ledger.wizard.form.view</field>
			<field name="model">general.ledger.wizard</field>
			<field name="arch" type="xml">
				<form string="General Ledger">
                    <group>
                        <group>
                            <field name="in_date" />
                        </group>
                        <group>
                            <field name="gl_account" widget="many2many_tags"/>
                        </group>
                    </group>
					<footer>
						<button name="print_report" type="object" string="Print" class="oe_highlight" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
					</footer>
				</form>
			</field>
		</record>

		<record id="action_report_general_ledger_wizard" model="ir.actions.act_window">
			<field name="name">General Ledger Report</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">general.ledger.wizard</field>
			<field name="view_id" ref="de_report_general_ledger.report_general_ledger_wizard_form_view" />
			<field name="view_mode">form</field>
			<field name="target">new</field>
		</record>
        
        <menuitem action="de_report_general_ledger.action_report_general_ledger_wizard" id="report_general_ledger_report_item" name="General Ledger Report" parent="account.menu_finance_reports" sequence="5"/>


    </data>
</odoo>
